package study;

public class QuickSort {
    int[] Arr;
    
    //get pivot from subarray
    public static int partition(int[] A, int lo, int hi){
    	int pivot=A[lo];
    	int[] left = null;
    	int[] right = null;
    	
    	int i=0;
    	int j=0;
        while(lo<=hi){
        	if(A[lo++]<pivot)
        		left[i++]=A[lo++];
        	if(A[lo++]>pivot)
        		right[j++]=A[lo++];
        }
        int indexPivot=i++;
        return indexPivot;
    }
	
    public QuickSort(int []A, int lo, int hi){
    	if(lo==hi) return;
    	else
    		int p=partition(A, lo, hi);
    	    QuickSort(A, lo, p);
    	    QuickSort(A,p+1, hi);
    }
    
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}

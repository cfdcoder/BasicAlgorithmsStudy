package study;

public class MergeSort2 {
    int[] Arr;
    
    public void MergeSort(int[] A){
    	int n=length(A);
    	if(n<2) return;
    	int mid=n/2;
    	int[] left=new int[mid];
    	int[] right=new int[n-mid];
    	for(int i=0;i<mid;i++){
    		left[i]=A[i];
    	}
    	for(int j=0;j<(n-mid);j++){
    		right[j]=A[mid+1+j];
    	}
    	MergeSort(left);
    	MergeSort(right);
    	Merge(left,right,A);	
    }
    
    public void Merge(int[] L, int[] R, int[] A){
    	int nL=L.length;
    	int nR=R.length;
    	int i=0, j=0, k=0;
    	while(i<nL && j<nR){
    		if(L[i]<=R[j]){
    			A[k]=L[i];
    			k++;
    			i++;
    		}else{
    			A[k]=R[j];
    			k++;
    			j++;
    		}
    		k++;
    	}
    	while(i<nL){
    		A[k]=L[i];
    		i++;
    		k++;
    	}
    	while(j<nR){
    		A[k]=R[j];
    		j++;
    		k++;
    	}
    }
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
